<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="inventory">
	
	<select id="getTotalCount" resultType="int">
		select COUNT(*) from inventory
	</select>	
	
	<select id="categoryLoading" parameterType="String" resultType="com.aesop.domain.CategoryVO">
		select category, pno, pname from product where category=#{category}
	</select>

	<!-- 재고 목록 조회 -->
	<select id="getInventoryList" resultType="com.aesop.domain.Inventory">
		select * from inventoryVO 
	</select>	
	
	<!-- 재고 상세 보기 -->
	<select id="getInventory" resultType="com.aesop.domain.Inventory">
		select * from inventoryVO where pno=#{pno}
	</select>
	
	<!-- 재고/판매 등록 -->
	<insert id="insInventory" parameterType="com.aesop.domain.Inventory">
		insert into inventory values (default, #{pno}, #{iprice}, #{oprice}, #{amount}, #{remark}, default)
	</insert>
	
	<!-- 재고 변경 -->
	<update id="upInventory" parameterType="com.aesop.domain.Inventory">
		update inventory set iprice=#{iprice}, oprice=#{oprice}, amount=#{amount} where ino=#{ino}
	</update>
	
	<!-- 재고 삭제 -->
	<delete id="delInventory">
		delete from inventory where no=#{no}
	</delete>
</mapper>